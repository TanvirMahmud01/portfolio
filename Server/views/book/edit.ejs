<%- include ../partials/header.ejs %>


<%- include ../partials/main_nav.ejs %> 

<!-- Content for the Add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-8">
            <h1><% title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter your full name"
                    value="<%= book.name %>"
                    name="name" required>
                    
                </div>

                <div class="form-group">
                    <label for="phoneTextField">Phone Number</label>
                    <input type="text" class="form-control"
                    id="phoneTextField"
                    placeholder="Phone number"
                    value="<%= book.phone %>" 
                    name="phone" required>
                                       
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Email address"
                    value="<%= book.email %>"
                    name="email" required>                    
                </div>

                
                
               

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit</button>

                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel</a>
                </button>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %> 

<%- include ../partials/footer.ejs %>