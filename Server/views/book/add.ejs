<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page-->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-8">
        <h1 class="display-7 mt-5 mb-3">Add Contact Information</h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label class="form-label" for="nameTextField">Contact Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter your full name"
            name="name"
            required
          />
        </div>

        <div class="form-group">
          <label class="form-label" for="phoneTextField">Phone Number</label>
          <input
            type="text"
            class="form-control"
            id="phoneTextField"
            placeholder="Phone number"
            name="phone"
            required
          />
        </div>

        <div class="form-group">
          <label class="form-label" for="emailTextField">Email Address</label>
          <input
            type="text"
            class="form-control"
            id="emailTextField"
            placeholder="Email address"
            name="email"
            required
          />
        </div>

        <div class="mt-3">
            <button class="btn btn-primary btn-sm" type="submit">
                <i class="fas fa-edit"></i>Submit
              </button>
      
              <span class="ms-3">
                <a href="/contact-list" class="btn btn-warning btn-sm " role="button">
                  <i class="fas fa-undo ">Cancel</i></a
                >
              </span>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
